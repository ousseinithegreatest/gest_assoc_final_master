@model appli_gest_assoc.Models.Recette

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center"><h3 class="panel-title">Supprimer une recette</h3></div>
            <div class="panel-body">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Libelle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Libelle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Montant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Montant)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bureau)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bureau.NomBureau)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeRecette)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeRecette.Libelle)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRecette" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
</div>
</div>
</div>
