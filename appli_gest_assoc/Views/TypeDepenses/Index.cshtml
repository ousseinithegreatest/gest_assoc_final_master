@model IEnumerable<appli_gest_assoc.Models.TypeDepense>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-heading">
                    <h3 class="panel-title">Liste des type de dépense</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Libelle)
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Libelle)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.IdTypeDepense">Modifier</a> |
                                                @*<a asp-action="Details" asp-route-id="@item.IdTypeDepense">Details</a> |*@
                                                <a asp-action="Delete" asp-route-id="@item.IdTypeDepense">Supprimer</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
